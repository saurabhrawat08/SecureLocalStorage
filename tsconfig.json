{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "jsx": "react",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "dist",  
      "sourceMap": true
    },
    "include": ["src"], 
    "exclude": ["node_modules", "dist"] 
  }
  